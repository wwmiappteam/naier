    </style>
    <!-- 私人管家详细 -->
    <style name="housekeeper_detail_text_top">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/house_keeper_detail_text_top</item>
    </style>

    <style name="housekeeper_detail_text_desc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/house_keeper_detail_text_top</item>
    </style>

    <style name="housekeeper_detail_mid_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/house_keeper_detail_text_top</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/housekeeper_detail_mid_text_bg</item>
        <item name="android:paddingLeft">@dimen/google_normal_half</item>
        <item name="android:paddingRight">@dimen/google_normal</item>
    </style>

    <style name="housekeeper_detail_pb_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/google_normal_half</item>
        <item name="android:paddingRight">@dimen/google_normal</item>
    </style>
    
     <!-- 大图弹出框样式 -->
    <style name="dialog_big_pic" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:fadeEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>