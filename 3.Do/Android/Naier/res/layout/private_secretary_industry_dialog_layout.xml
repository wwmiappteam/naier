<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_private_secretary_industry_dialogtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picker_title_bar"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/naier_privatesecretary_industry" />

    <Button
        android:id="@+id/btn_industry_dialog_unlimited"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="35dp"
        android:background="@color/white"
        android:text="不限" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffb9b9b9" />

    <ExpandableListView
        android:id="@+id/explst_private_secretary_industry_dialogcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:listSelector="#00000000" />

</LinearLayout>