<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120px"
    android:layout_height="140px"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_keeper_star_item_head"
        android:layout_width="107px"
        android:layout_height="107px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/google_normal_half"
        android:layout_marginTop="@dimen/google_normal_double"
        android:background="@drawable/private_housekeeper_heads_default" />

    <TextView
        android:id="@+id/tv_keeper_star_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/google_normal"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/order_service_name" />

    <View
        android:id="@+id/v_keeper_star_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/housekeeper_detail_hint" />

</LinearLayout>