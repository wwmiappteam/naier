<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:orientation="vertical" >

    <include layout="@layout/naier_top_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <!-- 登录 -->

        <ImageView
            android:id="@+id/more_rly_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="clickItem"
            android:scaleType="fitXY"
            android:src="@drawable/more_itm_login_selector" />

        <!-- 个人中心 -->

        <ImageView
            android:id="@+id/more_rly_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="clickItem"
            android:scaleType="fitXY"
            android:src="@drawable/more_itm_personal_selector" />

        <!-- 注册 -->

        <ImageView
            android:id="@+id/more_rly_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="clickItem"
            android:scaleType="fitXY"
            android:src="@drawable/more_itm_register_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <!-- 关于我们 -->

        <ImageView
            android:id="@+id/more_rly_aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="clickItem"
            android:scaleType="fitXY"
            android:src="@drawable/more_itm_aboutus_selector" />

        <!-- 呼叫顾问 -->

        <ImageView
            android:id="@+id/more_rly_callcenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="clickItem"
            android:scaleType="fitXY"
            android:src="@drawable/more_itm_callcenter_selector" />

        <!-- 意见反馈 -->

        <ImageView
            android:id="@+id/more_rly_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="clickItem"
            android:scaleType="fitXY"
            android:src="@drawable/more_itm_feedback_selector" />

        <!-- 版权说明 -->

        <ImageView
            android:id="@+id/more_rly_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="clickItem"
            android:scaleType="fitXY"
            android:src="@drawable/more_itm_copyright_selector" />
    </LinearLayout>

</LinearLayout>