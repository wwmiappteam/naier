<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/personal_bg_listbg" >

    <ImageView
        android:id="@+id/orderlist_item_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.2"
        android:padding="2dp"
        android:src="@drawable/personal_photo_default" />

    <TextView
        android:id="@+id/orderlist_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="-1dp"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/orderlist_item_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="-1dp"
        android:layout_weight="2"
        android:gravity="center" />

    <TextView
        android:id="@+id/orderlist_item_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="-1dp"
        android:layout_weight="1.2"
        android:gravity="center" />

</LinearLayout>