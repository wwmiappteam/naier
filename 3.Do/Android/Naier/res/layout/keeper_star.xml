<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/private_housekeeper_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/naier_top_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/google_normal_half" >

        <TextView
            style="@style/housekeeper_detail_text_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/google_normal"
            android:layout_marginTop="@dimen/google_normal"
            android:text="@string/housekeeper_detail_introduce" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/google_normal_half"
            android:layout_marginLeft="@dimen/google_normal"
            android:layout_marginRight="@dimen/google_normal"
            android:layout_marginTop="@dimen/google_normal_half"
            android:background="@color/grey_black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_keeper_star_desc"
                    style="@style/housekeeper_detail_text_desc"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/google_normal"
                    android:layout_marginTop="@dimen/google_normal" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/google_normal_half" >

        <GridView
            android:id="@+id/gv_keeper_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/housekeeper_detail_text_bg"
            android:fadingEdge="none"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>